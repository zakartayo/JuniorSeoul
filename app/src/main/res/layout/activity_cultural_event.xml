                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/cseodaemun"
                android:onClick="onButtonClick"
                android:src="@drawable/seodamungu"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/cseocho"
                android:onClick="onButtonClick"
                android:src="@drawable/seochogu"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/csungdong"
                android:onClick="onButtonClick"
                android:src="@drawable/sungdonggu"/>
