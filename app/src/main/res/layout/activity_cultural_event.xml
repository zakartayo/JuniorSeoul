                android:id="@+id/csongpa"
                android:onClick="onButtonClick"
                android:src="@drawable/songpagu"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/cyangcheon"
                android:onClick="onButtonClick"
                android:src="@drawable/yangcheongu"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/cyoungdeungpo"
                android:onClick="onButtonClick"
                android:src="@drawable/youngdeungpogu"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/cyongsan"
                android:onClick="onButtonClick"
                android:src="@drawable/yongsangu"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/ceunpyung"
                android:onClick="onButtonClick"
                android:src="@drawable/eunpyeonggu"/>
